---
import hm from "./icons/HMLT.astro"
import cms from "./icons/MCss.astro"
import scriptm from "./icons/Script.astro"

const TAGS = {
  HTMLM: {
    name: "HTML",
    class: "bg-black text-white",
    icon: hm },
  CSSM: {
    name: "CSS",
    class: "bg-black text-white",
    icon: cms,
  },
  JAVAM:{
    name: "JavaScript",
    class: "bg-black text-white",
    icon: scriptm ,
  }
}
const PROYECTS = [
    {
        title: 'Proyecto personal de CV',
        description: 'Presentacion de mis habilidades, conocimientos y trabajos como desarrollador que eh completados.',
        link: 'https://sitiopersonal-mauri.netlify.app/',
        github: 'https://github.com/evilmauri/PortafolioM',
        image: './proyectosimg/image01.png',
        tags: [TAGS.HTMLM, TAGS.CSSM, TAGS.JAVAM],
    },
]

---


{
    PROYECTS.map(({image,title, description, tags }) => (
        <article>
         <h3 class="text-2xl font-semibold text-yellow-200 py-6">{title}</h3>
         <p class="text-lg mb-4 text-pretty">{description}</p>
         <ul class="flex gap-x-2 flex-row mb-4">
            {tags.map((tag) => (
                <li>
                  <span class={`flex gap-x-2 rounded-full text-sm ${tag.class} py-1 px-2`}>
                  <tag.icon class="size-6"/>
                 {tag.name}
                </span>
                 </li>
            ))}
        </ul>
        <img 
        class="rounded shadow-2xl shadow-white/15" 
        src={image} 
        alt={`Captura de pantalla del proyecto ${image}`} />
        </article>
        ))
}